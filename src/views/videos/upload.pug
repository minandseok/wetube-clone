extends ../layout 

block content 
    div.form-box
        div.form-box__border
            div.error-msg-box
                if errorMessage 
                    span=errorMessage
            form(method="post", enctype="multipart/form-data")
                label(for="video") Video File 
                input(type="file", accept="video/*", required, id="video", name="video")
                input(name="title" type="text" required placeholder="Title", maxLength=60, minLength=1)
                input(name="description" type="text" required placeholder="Description", maxLength=200)
                input(name="hashtags" type="text" required placeholder="Hashtags (Separated by comma.)")
                input(type="submit" value=" Upload Video")